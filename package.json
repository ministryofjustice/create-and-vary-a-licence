{
  "name": "create-and-vary-a-licence",
  "version": "0.0.1",
  "description": "Create And Vary A Licence",
  "repository": "git@github.com:ministryofjustice/create-and-vary-a-licence.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "copy-views": "cp -R server/views dist/server/",
    "compile-sass": "./bin/build-css.sh -q --quiet-deps --no-source-map",
    "watch-ts": "tsc -w",
    "watch-views": "nodemon --watch server/views -e html,njk -x npm run copy-views",
    "watch-node": "DEBUG=gov-starter-server* nodemon -r dotenv/config --watch dist/ dist/server.js | bunyan -o short",
    "watch-sass": "npm run compile-sass -- --watch",
    "build": "rm -rf dist && npm run compile-sass && tsc && npm run copy-views",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run watch-sass\"",
    "start-feature": "export $(cat feature.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "watch-node-feature": "export $(cat feature.env) && nodemon --watch dist/ $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node-feature\" \"npm run watch-sass\"",
    "record-build-info": "node ./bin/record-build-info",
    "lint": "eslint . --cache --max-warnings 0",
    "typecheck": "tsc",
    "test": "jest --collectCoverage=true",
    "test:ci": "jest --maxWorkers=2 --collectCoverage=true --testPathPattern=/server/.*",
    "integrationTest": "jest --runInBand --testPathPattern=/integration_tests/.*",
    "security_audit": "better-npm-audit audit",
    "assign-com-roles": "node $NODE_OPTIONS -r dotenv/config dist/jobs/assignComRoles.js | bunyan -o short",
    "assign-aco-roles": "node $NODE_OPTIONS -r dotenv/config dist/jobs/assignAcoRoles.js | bunyan -o short",
    "activate-valid-licences": "node $NODE_OPTIONS -r dotenv/config dist/jobs/updateLicences.js | bunyan -o short",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open",
    "clean": "rm -rf dist build node_modules stylesheets coverage"
  },
  "engines": {
    "node": "^18",
    "npm": "^9"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/server/**/?(*.)(spec|test).{ts,js,jsx,mjs}",
      "<rootDir>/jobs/**/?(*.)(spec|test).{ts,js,jsx,mjs}",
      "<rootDir>/integration_tests/gotenberg/?(*.)(spec|test).{ts,js,jsx,mjs}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration_tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^1.8.0",
    "agentkeepalive": "^4.3.0",
    "applicationinsights": "^2.7.0",
    "aws-sdk": "^2.1413.0",
    "body-parser": "^1.20.2",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-redis": "^7.1.0",
    "csurf": "^1.11.0",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "filesize": "^10.0.7",
    "govuk-frontend": "^4.7.0",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "jquery": "^3.7.0",
    "jquery-ui-dist": "^1.13.2",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "nocache": "^4.0.0",
    "number-to-words": "^1.2.4",
    "nunjucks": "^3.2.4",
    "passport": "^0.6.0",
    "passport-oauth2": "^1.7.0",
    "qrcode": "^1.5.3",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "sqs-consumer": "^7.2.0",
    "superagent": "^8.0.9",
    "uk-bank-holidays": "^0.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/bunyan-format": "^0.2.5",
    "@types/compression": "^1.7.2",
    "@types/connect-flash": "0.0.37",
    "@types/csurf": "^1.11.2",
    "@types/express-session": "^1.17.7",
    "@types/http-errors": "^2.0.1",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.16.19",
    "@types/number-to-words": "^1.2.1",
    "@types/nunjucks": "^3.2.3",
    "@types/passport": "^1.0.12",
    "@types/passport-oauth2": "^1.4.12",
    "@types/qrcode": "^1.5.1",
    "@types/redis-mock": "^0.17.1",
    "@types/superagent": "^4.1.18",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "axe-core": "^4.7.2",
    "better-npm-audit": "^3.7.3",
    "cheerio": "^1.0.0-rc.12",
    "concurrently": "^8.2.0",
    "cypress": "^12.17.0",
    "cypress-axe": "^1.4.0",
    "cypress-multi-reporters": "^1.6.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.44.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "jest-html-reporter": "^3.10.1",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.1",
    "lint-staged": "^13.2.3",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.2.0",
    "nock": "^13.3.1",
    "nodemon": "^2.0.22",
    "pdf-parse": "^1.1.1",
    "prettier": "^2.8.8",
    "redis-mock": "^0.56.3",
    "sass": "^1.63.6",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "overrides": {
    "semver": "^7.5.3"
  }
}
