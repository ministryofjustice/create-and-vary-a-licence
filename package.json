{
  "name": "create-and-vary-a-licence",
  "version": "0.0.1",
  "description": "Create And Vary A Licence",
  "repository": "git@github.com:ministryofjustice/create-and-vary-a-licence.git",
  "license": "MIT",
  "scripts": {
    "prepare": "hmpps-precommit-hooks-prepare",
    "copy-views": "cp -R server/views dist/server/",
    "compile-sass": "./bin/build-css.sh -q --quiet-deps --no-source-map",
    "watch-ts": "tsc -w",
    "watch-views": "nodemon --watch server/views -e html,njk -x npm run copy-views",
    "watch-node": "DEBUG=gov-starter-server* nodemon --env-file=.env --watch dist/ dist/server.js | bunyan -o short",
    "watch-sass": "npm run compile-sass -- --watch",
    "build": "rm -rf dist && npm run compile-sass && tsc && npm run copy-views",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run watch-sass\"",
    "start-feature": "node --env-file=feature.env  $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "watch-node-feature": "nodemon --env-file=feature.env --watch dist/ $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node-feature\" \"npm run watch-sass\"",
    "record-build-info": "node ./bin/record-build-info",
    "lint": "eslint . --cache --max-warnings 0",
    "typecheck": "tsc",
    "test": "jest --maxWorkers=2 --collectCoverage=true",
    "test:ci": "jest --maxWorkers=2 --collectCoverage=true --testPathPatterns=/server/.*",
    "integrationTest": "jest --runInBand --testPathPatterns=/integration_tests/.*",
    "security_audit": "better-npm-audit audit",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open --e2e --browser chrome",
    "clean": "rm -rf dist build node_modules stylesheets coverage",
    "rebuild": "npm run clean && npm i && npm run build",
    "setup": "npm ci && hmpps-npm-script-run-allowlist"
  },
  "engines": {
    "node": "^24",
    "npm": "^11"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest"
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/server/**/?(*.)(spec|test).{ts,js,jsx,mjs}",
      "<rootDir>/jobs/**/?(*.)(spec|test).{ts,js,jsx,mjs}",
      "<rootDir>/integration_tests/gotenberg/?(*.)(spec|test).{ts,js,jsx,mjs}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration_tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css,mjs}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.952.0",
    "@ministryofjustice/frontend": "8.0.0",
    "@ministryofjustice/hmpps-digital-prison-reporting-frontend": "4.26.5",
    "@ministryofjustice/hmpps-monitoring": "^1.0.0",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^2.9.8",
    "body-parser": "^2.2.1",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "csrf-sync": "^4.2.1",
    "date-fns": "^4.1.0",
    "express": "^5.2.1",
    "express-session": "^1.18.2",
    "filesize": "^11.0.13",
    "govuk-frontend": "5.13.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.1",
    "jquery": "^3.7.1",
    "jquery-ui-dist": "^1.13.3",
    "jwt-decode": "^4.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "multer": "^2.0.2",
    "nocache": "^4.0.0",
    "number-to-words": "^1.2.4",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "qrcode": "^1.5.4",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "sqs-consumer": "^12.0.0",
    "superagent": "^10.2.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@ministryofjustice/eslint-config-hmpps": "^1.0.2",
    "@ministryofjustice/hmpps-npm-script-allowlist": "^0.0.3",
    "@ministryofjustice/hmpps-precommit-hooks": "2.0.0-beta.1",
    "@tsconfig/node24": "24.0.3",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.8.1",
    "@types/connect-flash": "0.0.40",
    "@types/express-session": "^1.18.2",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/number-to-words": "^1.2.3",
    "@types/nunjucks": "^3.2.6",
    "@types/nunjucks-date": "^0.0.10",
    "@types/parseurl": "^1.3.3",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.8.0",
    "@types/qrcode": "^1.5.6",
    "@types/redis-mock": "^0.17.3",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "axe-core": "^4.11.0",
    "better-npm-audit": "^3.11.0",
    "cheerio": "^1.1.2",
    "concurrently": "^9.2.1",
    "cypress": "^15.7.1",
    "cypress-axe": "^1.7.0",
    "cypress-multi-reporters": "^2.0.5",
    "jest": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.3",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^14.0.10",
    "nodemon": "^3.1.11",
    "openapi-typescript": "^7.10.1",
    "redis-mock": "^0.56.3",
    "sass": "^1.97.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "semver": "^7.5.3"
  }
}
