{% extends "layout.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}

{% set pageTitle = applicationName + " - Create a licence - Pathfinder Details" %}
{% set pageId = "pathfinder-details-question-page" %}
{% set backLinkHref = "/" %}
{% set noJsBackLink = true %}

{% block content %}
    <form method="POST">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                {% set programmeNameHtml %}
                    {{ govukTextarea({
                        id: 'programmeName',
                        name: 'programmeName',
                        label: {
                            html: 'What is the name of the pathfinder or programme(the information will not appear on the licence)?'
                        },
                        errorMessage: validationErrors | findError('programmeName'),
                        value: licence.electronicMonitoringProvider.programmeName | fillFormResponse(formResponses.programmeName)
                    }) }}
                {% endset %}
                {{ govukRadios({
                    idPrefix: "radio-option",
                    name: "isToBeTaggedForProgramme",
                    fieldset: {
                        attributes: {
                            id: 'isToBeTaggedForProgramme'
                        },
                        legend: {
                            text: 'Are they being tagged as part of a pathfinder or programme?',
                            isPageHeading: true,
                            classes: "govuk-fieldset__legend--l"
                        }
                    },
                    hint: {
                        text: "For example, DAPOL(domestic abuse perpetrator on licence) or EMAC(EM acquisitive crime)."
                    },
                    errorMessage: validationErrors | findError('isToBeTaggedForProgramme'),
                    items: [
                        {
                            value: "Yes",
                            checked: (formResponses.isToBeTaggedForProgramme == "Yes") | (licence.electronicMonitoringProvider.isToBeTaggedForProgramme),
                            text: "Yes",
                            conditional: {
                                html: programmeNameHtml
                            }
                        },
                        {
                            value: "No",
                            checked: (formResponses.isToBeTaggedForProgramme == "No") | (licence.electronicMonitoringProvider.isToBeTaggedForProgramme),
                            text: "No"
                        }
                    ]
                }) }}

                {{ govukButton({
                    text: "Continue",
                    type: "submit",
                    attributes: { 'data-qa': 'continue' }
                }) }}
            </div>
        </div>
    </form>
{% endblock %}
