{% extends "layout.njk" %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - view COM details" %}
{% set pageId = "com-details-page" %}
{% set backLinkHref = "/licence/view/cases" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-quarters">
            <h1 class="govuk-heading-l">Community offender manager details</h1>
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-quarters-from-desktop">

            {{ govukSummaryList({
                rows: [
                    {
                        key: {
                            text: "Name"
                        },
                        value: {
                            text: licence.comFirstName + " " + licence.comLastName
                        }
                    },
                    {
                        key: {
                            text: "Office phone number"
                        },
                        value: {
                            text: licence.comTelephone
                        }
                    },
                    {
                        key: {
                            text: "Email"
                        },
                        value: {
                            text: licence.comEmail
                        }
                    }
                ]
            }) }}

            {{ govukButton({
                text: 'Return to case list',
                href: '/licence/view/cases',
                classes: 'govuk-!-margin-top-6',
                attributes: { 'data-qa': 'return' }
            }) }}
        </div>
    </div>
{% endblock %}
