{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

{%  macro immediateReleaseConditions(params) %}
    {% if params.view === 'Approver' %}
        <div class="govuk-warning-text">
            <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
            <strong class="govuk-warning-text__text">
            <span class="govuk-warning-text__assistive">Warning</span>
            This licence was generated by {{ params.submittedBy }} at OMU {{ params.prison }} as the probation practitioner did not submit one in time for final release checks.
            </strong>
        </div>
    {% endif %}
    <p class="govuk-body">By default, the licence will automatically contain the following restrictions:</p>
    <ul class="govuk-list govuk-list--bullet standard-conditions">
        <li>standard conditions</li>
        <li>the following additional condition:</li>
    </ul>
    {{ govukInsetText({
        text: "Not to approach or communicate with any victims of your offences without the prior approval of your supervising officer."
    }) }}

    {% if params.view === 'Approver' %}
        <p>No other additional or bespoke licence conditions can be added. <br><br>A community probation practitioner can do this after release.</p>
    {% endif %}
{% endmacro %}
