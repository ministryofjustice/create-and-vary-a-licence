{% extends "../partials/layout.njk" %}

{% from "govuk/components/table/macro.njk" import govukTable %}

{% set pageTitle = applicationName + " - prisoner detail" %}

{% block content %}
    <div class="govuk-width-container">
        <h1 class="govuk-heading-l govuk-!-margin-top-7">Create and vary a licence</h1>
        <p class="govuk-body govuk-!-margin-bottom-7">Prisoner detail</p>
    </div>

    <div class="prisoner-content">
        <div class="govuk-width-container">
            <table id="prisoner-detail" class="govuk-table" data-qa="prisoner-detail">

                <thead class="govuk-table__head">
                  <th scope="col" class="govuk-table__header">Prisoner Number</th>
                  <th scope="col" class="govuk-table__header">First Name</th>
                  <th scope="col" class="govuk-table__header">Last Name</th>
                  <th scope="col" class="govuk-table__header">Legal Status</th>
                  <th scope="col" class="govuk-table__header">Prison code</th>
                  <th scope="col" class="govuk-table__header">Location Description</th>
                  <th scope="col" class="govuk-table__header">Sentence start</th>
                  <th scope="col" class="govuk-table__header">Conditional Release</th>
                  <th scope="col" class="govuk-table__header">Licence expiry</th>
                </thead>

                <tbody class="govuk-table__body govuk-body-s">
                  <tr class="govuk-table__row">
                    <td class="govuk-table__cell">{{ prisonerDetail.offenderNo }}</td>
                    <td class="govuk-table__cell">{{ prisonerDetail.firstName }}</td>
                    <td class="govuk-table__cell">{{ prisonerDetail.lastName }}</td>
                    <td class="govuk-table__cell">{{ prisonerDetail.legalStatus }}</td>
                    <td class="govuk-table__cell">{{ prisonerDetail.latestLocationId }}</td>
                    <td class="govuk-table__cell">{{ prisonerDetail.locationDescription }}</td>
                    <td class="govuk-table__cell">{{ prisonerDetail.sentenceDetail.sentenceStartDate or "NA" }}</td>
                    <td class="govuk-table__cell">{{ prisonerDetail.sentenceDetail.conditionalReleaseDate or "NA" }}</td>
                    <td class="govuk-table__cell">{{ prisonerDetail.sentenceDetail.licenceExpiryDate or "NA" }}</td>
                  </tr>
                </tbody>

            </table>
        </div>
    </div>
{% endblock %}
