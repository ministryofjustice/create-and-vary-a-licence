{% extends "layout.njk" %}

{% set pageTitle = applicationName + " - No address found" %}
{% set backLinkHref = "/" %}

{% block content %}
    <div class="govuk-width-container">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l">
                No address found
            </h1>
            <p class="govuk-body">
                We could not find an address that matches <strong>{{ searchQuery }}</strong>.<br>You can search again or enter the address manually.
            </p>
            <p class="govuk-body">
                <a data-qa="searchAgain" class="govuk-link" href="{{ postcodeLookupSearchUrl }}">Search again</a>
            </p>
            <p class="govuk-body govuk-!-margin-top-3">
                <a data-qa="enterAddressManually" class="govuk-link" href={{ manualAddressEntryUrl }}>Enter address manually</a>
            </p>
        </div>
      </div>
    </div>
{% endblock %}
