{% extends "layout.njk" %}

{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Create a licence - What is the contact phone number for the initial appointment?" %}
{% set pageId = "appointment-contact-page" %}
{% set backLinkHref = "/licence/create/id/" + licence.id + "/initial-meeting-place" %}

{% set telClasses = "govuk-input--width-20" %}
{% if edit == "altTelNumber" %}
    {% set telClasses = telClasses + " govuk-!-display-none" %}
{% endif %}

{% set altTelClasses = "govuk-input--width-20" %}
{% if edit == "telNumber" %}
    {% set altTelClasses = altTelClasses + " govuk-!-display-none" %}
{% endif %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-quarters">
            <h1 class="govuk-heading-l">What is the contact phone number for the initial appointment?</h1>
        </div>
    </div>
    <form method="POST">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                {% if licence.isEligibleForEarlyRelease and not licence.kind == "HDC" %}
                    {{ govukWarningText({
                        html: "This person is eligible for an earlier release. It may affect their initial appointment. Find more information <br> in the <a class='govuk-link' rel='noreferrer noopener' target='_blank' href="+ fridayReleasePolicy +">Friday or pre-bank holiday release policy framework (opens in new tab).</a>",
                        iconFallbackText: "Warning"
                    }) }}
                {% endif %}
                <div class="{{ telClasses }}">
                    {{ govukInput({
                        label: {
                            text: "UK telephone number"
                        },
                        id: "telephone",
                        name: "telephone",
                        classes: "govuk-input--width-20",
                        errorMessage: validationErrors | findError('telephone'),
                        value: licence.appointmentTelephoneNumber | fillFormResponse(formResponses.telephone)
                    }) }}
                </div>
                <div class="{{ altTelClasses }}">
                    {{ govukInput({
                        label: {
                            text: "Alternative UK telephone number (optional)"
                        },
                        id: "telephoneAlternative",
                        name: "telephoneAlternative",
                        classes: "govuk-input--width-20",
                        errorMessage: validationErrors | findError('telephoneAlternative'),
                        value: licence.appointmentAlternativeTelephoneNumber | fillFormResponse(formResponses.telephoneAlternative)
                    }) }}
                </div>
                {{ govukButton({
                    text: continueOrSave,
                    type: "submit",
                    attributes: { 'data-qa': 'continue' }
                }) }}
            </div>
        </div>
    </form>
{% endblock %}
