{% macro offender(dateOfBirth, licenceExpiryDate, nomsId, imageData, htmlPrint) %}
<div class="offender" id="offender">
    {% if htmlPrint %}
      <img id="offender-image" src="/prisoner/{{ nomsId or 'placeholder' }}/image" width="90px" height="120px" class="text-wrap">
    {% else %}
      <img id="offender-image" src='data:image/jpeg;charset-utf8;base64,{{ imageData }}' width="90px" height="120px" class="text-wrap">
    {% endif %}
    <br/>
    <br/>
    Date of birth: <span class="bold">{{ dateOfBirth | datetimeToDate }}</span>
    <br/>
    <br/>
    Your licence and sentence expires on <span class="bold">{{ licenceExpiryDate | datetimeToDate }}</span>
    <br/>
</div>
{% endmacro %}

