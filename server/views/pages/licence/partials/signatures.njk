{% macro signatures(releaseDate, approverName, approvedDate, offenderName) %}
    <div class="boxed">
        <div class="signatures">
            <p>Signed:  {{ approverName }}  for the Secretary of State for Justice.</p>
            <p>Date: {{ approvedDate | datetimeToDate }}</p>
            <p></p>
            <p>This licence has been give to me and its requirements have been explained.</p>
            <p></p>
            <p>Name: <span class="bold">{{ offenderName }}</span></p>
            <p>Signed:</p>
            <textarea class="signature-box" rows="4" cols="60" readonly draggable="false"></textarea>
            <p>Date: {{ releaseDate | datetimeToDate }}</p>
        </div>
    </div>
{% endmacro %}
