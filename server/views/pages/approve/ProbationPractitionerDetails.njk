{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% macro ProbationPractitionerDetails(staffDetails) %}
    {{ govukSummaryList({
        attributes: { id: 'probation-practitioner-details' },
        rows: [
            {
                key: { text: "Name" },
                value: { text: staffDetails.name }
            },
            {
                key: { text: "Email" },
                value: { text: staffDetails.email or 'No email address recorded' }
            },
            {
                key: { text: "Phone number" },
                value: { text: staffDetails.telephone or 'No phone number recorded' }
            }
        ]
    }) }}
{% endmacro %}
