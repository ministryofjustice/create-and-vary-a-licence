{% extends "layout.njk" %}

{% from "govuk/components//button/macro.njk" import govukButton %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% set pageTitle = applicationName + " - licence approved" %}
{% set pageId = "confirm-approve-page" %}
{% set hideLicenceBanner = true %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {{ govukPanel({
                titleText: titleText
            }) }}

            <h2 class="govuk-heading-m">What happens next</h2>
            <p class="govuk-body">
                {{ confirmationMessage }}
            </p>
            <p class="govuk-body">
                A prison administrator can now print the licence
            </p>

            <h2 class="govuk-heading-m">If a community probation practitioner makes any changes</h2>
            <p class="govuk-body">
                A community probation practitioner may edit and re-submit this licence for approval if they need to make a change.
            </p>
            <p class="govuk-body">
                The licence will appear again in your approvals case list.
            </p>

            <h2 class="govuk-heading-m">Give us your feedback</h2>
            <p class="govuk-body">
                <a href="{{ exitSurveyLink }}" rel="noreferrer noopener" target="_blank" id="exit-survey" class="govuk-link">What did you think of this service?</a> (takes 30 seconds)
            </p>

            <p class="govuk-body">
                {{ govukButton({
                    text: "Return to case list",
                    classes: "govuk-button--primary govuk-!-margin-bottom-0 govuk-body",
                    href: '/licence/approve/cases',
                    attributes: { 'data-qa': 'return-to-case-list' }
                }) }}
            </p>
        </div>
    </div>
{% endblock %}
