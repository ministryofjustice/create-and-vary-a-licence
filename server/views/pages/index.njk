{% extends "layout.njk" %}
{% from "partials/card.njk" import card %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% set pageTitle = applicationName + " - Home" %}
{% set pageId = 'index-page' %}

{% block content %}
    <div class="grid-row">
        <div class="govuk-grid-column-full">

        {% set html %}
          <p class="govuk-notification-banner__heading">
            Create and vary a licence will not be available on Tuesday 11 April 2023 from 6am to 8am due to maintenance.
          </p>
        {% endset %}
        {{ govukNotificationBanner({
          html: html
        }) }}

            <h1 class="govuk-heading-l">Create and vary a licence</h1>
            <div class="govuk-grid-row card-group">
                {% if shouldShowCreateLicenceCard %}
                    <div class="govuk-grid-column-one-third card-group__item">
                        {{ card({
                            "id": "createLicenceCard",
                            "href": "/licence/create/caseload",
                            "clickable": "true",
                            "heading": "Create and edit a licence before a release date",
                            "description": "Create standard determinate licences and post sentence supervision orders for people in custody and send to prison for approval.",
                            "data-qa": "create-licence-link"
                        }) }}
                    </div>
                {% endif %}

                {% if shouldShowVaryLicenceCard %}
                    <div class="govuk-grid-column-one-third card-group__item">
                        {{ card({
                            "id": "varyLicenceCard",
                            "href": "/licence/vary/caseload",
                            "clickable": "true",
                            "heading": "View and vary a licence after a release date",
                            "description": "Find standard determinate licences and post sentence supervision orders for people on licence and send variation requests to the PDU head for approval.",
                            "data-qa": "create-licence-link"
                        }) }}
                    </div>
                {% endif %}

                {% if shouldShowViewOrPrintCard %}
                    <div class="govuk-grid-column-one-third card-group__item">
                        {{ card({
                            "id": "viewLicenceCard",
                            "href": "/licence/view/cases",
                            "clickable": "true",
                            "heading": "Print a licence",
                            "description": "Print standard determinate licences and post sentence supervision orders created by community offender managers.",
                            "data-qa": "view-print-licence-link"
                        }) }}
                    </div>
                {% endif %}

                {% if shouldShowApproveLicenceCard %}
                    <div class="govuk-grid-column-one-third card-group__item">
                        {{ card({
                            "id": "approveLicenceCard",
                            "href": "/licence/approve/cases",
                            "clickable": "true",
                            "heading": "Approve a licence",
                            "description": "Approve standard determinate licences and post sentence supervision orders created by community offender managers.",
                            "data-qa": "approve-licence-link"
                        }) }}
                    </div>
                {% endif %}

                {% if shouldShowVaryApprovalCard %}
                    <div class="govuk-grid-column-one-third card-group__item">
                        {{ card({
                            "id": "approveVariationCard",
                            "href": "/licence/vary-approve/list",
                            "clickable": "true",
                            "heading": "Approve licence variations",
                            "description": "Approve variations for standard determinate licences and post sentence supervision orders requested by probation practitioners.",
                            "data-qa": "approve-variation-link"
                        }) }}
                    </div>
                {% endif %}

                {% if shouldShowSupportCard %}
                    <div class="govuk-grid-column-one-third card-group__item">
                        {{ card({
                            "id": "supportCard",
                            "href": "/support",
                            "clickable": "true",
                            "heading": "Support",
                            "description": "View details about an offender or staff member to help with support."
                        }) }}
                    </div>
                {% endif %}

            </div>
        </div>
    </div>
{% endblock %}

{% block pageScripts %}
    <script src="/assets/js/card.js"></script>
{% endblock %}
