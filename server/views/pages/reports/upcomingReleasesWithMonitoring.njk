{% extends "layout.njk" %}

{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Upcoming Releases with monitoring conditions" %}
{% set pageId = "upcoming-releases-with-monitoring-condition" %}
{% set backLinkHref = "/reports" %}
{% set noJsBackLink = true %}

{% set cases = [] %}

{% for upcomingCase in upcomingCases %}
    {% set cases = (cases.push([
        {
            attributes: {
                id: 'prisonNumber-' + loop.index,
                "data-sort-value": upcomingCase.prisonNumber
            },
            classes: "max-width max-width-220",
            text: upcomingCase.prisonNumber
        },
        {
            attributes: {
                id: 'crn-' + loop.index,
                "data-sort-value": upcomingCase.crn
            },
            text: upcomingCase.crn
        },
        {
            attributes: {
                id: 'status-' + loop.index,
                "data-sort-value": upcomingCase.status
            },
            text: upcomingCase.status
        }
    ]), cases) %}
{% endfor %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-four-quarters">
            <h1 class="govuk-heading-xl">Upcoming Releases with electronic monitoring conditions</h1>
            <h2 class="govuk-heading-s">There are {{ upcomingCases.length }} upcoming releases</h2>
            <div class="govuk-button-group">
                        {{ govukButton({
                            text: "Download CSV",
                            href: "/reports/upcoming-releases-with-monitoring/download-csv",
                            classes: "govuk-button--secondary"
                        }) }}
            </div>
        </div>
    </div>
    {% if upcomingCases.length > 0 %}
        {{ govukTable({
            attributes: {
                'data-module': 'moj-sortable-table'
            },
            caption: "Caseload",
            captionClasses: "govuk-visually-hidden",
            head: [
                {
                    text: "Prison Number",
                    attributes: {
                        "aria-sort": "none"
                    }
                },
                {
                    text: "CRN",
                    attributes: {
                        "aria-sort": "none"
                    }
                },
                {
                    text: "Licence status",
                    attributes: {
                        "aria-sort": "none"
                    }
                }
            ],
            rows: cases
        }) }}
    {% endif %}

{% endblock %}
