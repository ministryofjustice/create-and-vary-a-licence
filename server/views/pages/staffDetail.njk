{% extends "../partials/layout.njk" %}

{% from "govuk/components/table/macro.njk" import govukTable %}

{% set pageTitle = applicationName + " - Staff detail" %}

{% block content %}
    <div class="govuk-width-container">
        <h1 class="govuk-heading-l govuk-!-margin-top-7">Create and vary a licence</h1>
        <p class="govuk-body govuk-!-margin-bottom-7">Staff detail</p>
    </div>

    <div class="staff-detail-content">
        <div class="govuk-width-container">

            <table id="staff-detail" class="govuk-table" data-qa="staff-detail">

                <thead class="govuk-table__head">
                  <th scope="col" class="govuk-table__header">Staff ID</th>
                  <th scope="col" class="govuk-table__header">Staff code</th>
                  <th scope="col" class="govuk-table__header">First name(s)</th>
                  <th scope="col" class="govuk-table__header">Surname</th>
                  <th scope="col" class="govuk-table__header">Email</th>
                  <th scope="col" class="govuk-table__header">Username</th>
                  <th scope="col" class="govuk-table__header">Telephone</th>
                </thead>

                <tbody class="govuk-table__body govuk-body-s">
                  <tr class="govuk-table__row">
                    <td class="govuk-table__cell">{{ staffDetail.staffIdentifier }}</td>
                    <td class="govuk-table__cell">{{ staffDetail.staffCode }}</td>
                    <td class="govuk-table__cell">{{ staffDetail.staff.forenames }}</td>
                    <td class="govuk-table__cell">{{ staffDetail.staff.surname }}</td>
                    <td class="govuk-table__cell">{{ staffDetail.email }}</td>
                    <td class="govuk-table__cell">{{ staffDetail.username }}</td>
                    <td class="govuk-table__cell">{{ staffDetail.telephoneNumber }}</td>
                  </tr>
                </tbody>

            </table>
        </div>
    </div>
{% endblock %}
